{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "./dist",
    "noEmit": false,
    "jsx": "preserve",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types", "./tests"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist", "node_modules"],
  "ts-node": {
    "files": true,
    "experimentalSpecifierResolution": "node"
  }
}
